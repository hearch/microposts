<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= gravatar_for @user %>
        <%= @user.name %></h1>
        <p><%= @user.prefecture %><br>
        <%= @user.profile %></p>
        <p>Following : <%= link_to @user.following_users.count , followings_user_path(@user) %> 
        / Followers : <%= link_to @user.follower_users.count , followers_user_path(@user) %></p>
        <p>Favorite Tweet List : <%= link_to @user.favorite_microposts.count , favorites_user_path(@user) %></p>
        </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  <%= paginate @microposts %>
  </div>
</div>
